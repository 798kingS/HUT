/* components/Header/Header.wxss */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}
.navbar-bg {
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  width: 100%;
  height: 150rpx;
  /* background: linear-gradient(90deg, #388e3c 0%, #81c784 100%); */
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  box-shadow: 0 4rpx 24rpx rgba(67,233,123,0.10);
}
/* 柔和白色蒙版 */
.navbar-bg::after {
  content: "";
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(255,255,255,0.18);
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}
.navbar-content {
  position: relative;
  width: 92%;
  height: 100rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 2;
}
.navbar-logo {
  width: 40rpx;
  height: 40rpx;
  margin-top: 55rpx;
  margin-left: 23rpx;
  border-radius: 16rpx;
  /* background: #fff; */
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
}
.navbar-title {
  flex: 1;
  margin-top: 50rpx;
  margin-right: 50rpx;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  letter-spacing: 4rpx;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.10);
}
.navbar-action {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.18);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}