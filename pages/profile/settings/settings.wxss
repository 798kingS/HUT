/* 设置页面样式 */
.settings-list {
  margin-bottom: 40rpx;
}

.settings-group {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.settings-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.settings-item:last-child {
  border-bottom: none;
}

.item-content {
  flex: 1;
}

.item-title {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.item-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.item-arrow {
  font-size: 32rpx;
  color: #ccc;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 60rpx 40rpx;
}

.version-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.copyright {
  display: block;
  font-size: 24rpx;
  color: #999;
} 