/* 自定义顶部导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}
.navbar-bg {
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  width: 100%;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(102,126,234,0.15);
}
.navbar-bg::after {
  content: "";
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(255,255,255,0.1);
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}
.navbar-content {
  position: relative;
  width: 92%;
  height: 100rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 2;
}
.navbar-title {
  flex: 1;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  letter-spacing: 4rpx;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.15);
}
.navbar-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.navbar-back {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}
.back-icon {
  font-size: 24rpx;
  color: #fff;
  font-weight: bold;
}

/* 主容器 */
.publish-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #f0f2ff 100%);
  padding-top: 160rpx;
  padding-bottom: 40rpx;
}

/* 表单区域 */
.form-section {
  background: #fff;
  border-radius: 24rpx;
  margin: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(102,126,234,0.08);
  overflow: hidden;
}
.section-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 32rpx 32rpx 24rpx 32rpx;
  background: linear-gradient(135deg, rgba(102,126,234,0.05) 0%, rgba(118,75,162,0.05) 100%);
  border-bottom: 1rpx solid #f0f0f0;
}
.section-icon {
  font-size: 32rpx;
}
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.form-group {
  padding: 32rpx;
}

/* 输入字段 */
.input-field {
  margin-bottom: 32rpx;
}
.input-label {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}
.label-icon {
  font-size: 24rpx;
}
.label-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}
.input-wrapper {
  position: relative;
}
.form-input {
  width: 100%;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333;
  background: #f8f9fa;
  transition: all 0.3s ease;
}
.form-input:focus {
  border-color: #667eea;
  background: #fff;
  box-shadow: 0 4rpx 16rpx rgba(102,126,234,0.1);
}
.textarea-wrapper {
  position: relative;
}
.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333;
  background: #f8f9fa;
  transition: all 0.3s ease;
  resize: none;
}
.form-textarea:focus {
  border-color: #667eea;
  background: #fff;
  box-shadow: 0 4rpx 16rpx rgba(102,126,234,0.1);
}
.char-count {
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
  font-size: 22rpx;
  color: #999;
}

/* 选择器 */
.picker-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
}
.picker-wrapper:active {
  border-color: #667eea;
  background: #fff;
  box-shadow: 0 4rpx 16rpx rgba(102,126,234,0.1);
}
.picker-text {
  font-size: 28rpx;
  color: #333;
}
.picker-arrow {
  font-size: 24rpx;
  color: #667eea;
  font-weight: bold;
}

/* 标签区域 */
.tags-section {
  margin-top: 24rpx;
}
.tags-label {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}
.selected-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
}
.tag-item {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(102,126,234,0.2);
}
.tag-text {
  margin-right: 8rpx;
}
.tag-remove {
  font-size: 20rpx;
  font-weight: bold;
  color: #fff;
  background: rgba(255,255,255,0.2);
  border-radius: 50%;
  width: 28rpx;
  height: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 8rpx;
}
.suggested-tags {
  margin-top: 16rpx;
}
.suggestion-title {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}
.suggestion-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}
.suggestion-tag {
  background: rgba(102,126,234,0.1);
  color: #667eea;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  transition: all 0.3s ease;
}
.suggestion-tag:active {
  background: rgba(102,126,234,0.2);
  transform: scale(0.95);
}

/* 图片上传 */
.upload-section {
  margin-top: 24rpx;
}
.upload-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 16rpx;
}
.upload-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
}
.upload-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.upload-delete {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background: #ff4757;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(255,71,87,0.3);
}
.upload-add {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(102,126,234,0.2);
  transition: all 0.3s ease;
}
.upload-add:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(102,126,234,0.3);
}
.add-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}
.add-text {
  font-size: 20rpx;
  font-weight: 500;
}
.upload-tip {
  font-size: 22rpx;
  color: #999;
}

/* 设置区域 */
.settings-group {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.setting-item:last-child {
  border-bottom: none;
}
.setting-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}
.setting-icon {
  font-size: 24rpx;
}
.setting-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 提交按钮 */
.submit-section {
  padding: 48rpx 32rpx 32rpx 32rpx;
}
.submit-btn {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 24rpx;
  padding: 32rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 32rpx rgba(102,126,234,0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  transition: all 0.3s ease;
}
.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(102,126,234,0.3);
}
.submit-icon {
  font-size: 28rpx;
}
.submit-text {
  font-size: 32rpx;
  font-weight: bold;
} 