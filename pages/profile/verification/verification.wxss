/* pages/profile/verification/verification.wxss */

/* 自定义顶部导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 150rpx;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}
.navbar-bg {
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  width: 100%;
  height: 150rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(102,126,234,0.15);
}
.navbar-bg::after {
  content: "";
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(255,255,255,0.1);
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}
.navbar-content {
  position: relative;
  width: 92%;
  height: 100rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 2;
}
.navbar-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255,255,255,0.2);
}
.back-icon {
  font-size: 48rpx;
  color: #fff;
  font-weight: bold;
  line-height: 1;
}
.navbar-title {
  flex: 1;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  letter-spacing: 4rpx;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.15);
}
.navbar-placeholder {
  width: 60rpx;
}

/* 主容器 */
.verification-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #f0f2ff 100%);
  padding-top: 160rpx;
  padding-bottom: 40rpx;
}

/* 认证头部 */
.verification-header {
  text-align: center;
  padding: 60rpx 32rpx 40rpx;
}
.header-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}
.header-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}
.header-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
}

/* 表单区域 */
.verification-form {
  margin: 0 32rpx;
}

.form-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(102,126,234,0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 32rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.required {
  color: #ff4757;
  margin-left: 4rpx;
}

.form-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background: #f8f9ff;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.form-input::placeholder {
  color: #999;
}

.phone-input-wrapper {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.phone-input {
  flex: 1;
}

.send-code-btn {
  height: 88rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
  white-space: nowrap;
  box-shadow: 0 4rpx 16rpx rgba(102,126,234,0.3);
}

.send-code-btn.disabled {
  background: #ccc;
  box-shadow: none;
}

.send-code-btn:active {
  opacity: 0.8;
}

.form-picker {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background: #f8f9ff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.form-picker.placeholder {
  color: #999;
}

.picker-arrow {
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
}

/* 上传区域 */
.upload-section {
  display: flex;
  gap: 24rpx;
  flex-wrap: wrap;
}

.upload-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
}

.delete-icon {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.6);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  line-height: 1;
  font-weight: bold;
}

.upload-placeholder {
  background: #f8f9ff;
  border: 2rpx dashed #ccc;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.upload-icon {
  font-size: 48rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

/* 认证状态卡片 */
.status-card {
  padding: 32rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.status-card.verified {
  background: rgba(76,175,80,0.1);
  border: 2rpx solid rgba(76,175,80,0.3);
}

.status-card.pending {
  background: rgba(255,152,0,0.1);
  border: 2rpx solid rgba(255,152,0,0.3);
}

.status-card.rejected {
  background: rgba(255,71,87,0.1);
  border: 2rpx solid rgba(255,71,87,0.3);
}

.status-icon {
  font-size: 64rpx;
  flex-shrink: 0;
}

.status-content {
  flex: 1;
}

.status-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.status-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 提交区域 */
.submit-section {
  padding: 40rpx 32rpx;
  text-align: center;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(102,126,234,0.3);
  margin-bottom: 24rpx;
}

.submit-btn.disabled {
  background: #ccc;
  box-shadow: none;
}

.submit-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.submit-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
}

