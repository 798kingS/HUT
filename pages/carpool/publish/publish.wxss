/* 拼车发布页美化样式 */
.publish-bg {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 40rpx;
  margin-top: 180rpx;
}
.form-section-opt {
  background: #fff;
  border-radius: 28rpx;
  box-shadow: 0 4rpx 24rpx rgba(76,175,80,0.08);
  padding: 40rpx 32rpx 32rpx 32rpx;
  margin: 40rpx 32rpx 0 32rpx;
}
.section-title-opt {
  font-size: 34rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 32rpx;
  padding-bottom: 12rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  border-bottom: 2rpx solid #e8f5e8;
}
.section-icon {
  font-size: 32rpx;
}
.form-item-opt {
  margin-bottom: 36rpx;
  position: relative;
}
.label-opt {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 18rpx;
  font-weight: 500;
}
.input-wrap-opt {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(76,175,80,0.06);
  padding: 0 24rpx;
  border: 2rpx solid transparent;
  transition: border 0.2s, box-shadow 0.2s;
}
.input-wrap-opt:focus-within {
  border: 2rpx solid #4CAF50;
  box-shadow: 0 4rpx 16rpx rgba(76,175,80,0.12);
}
.input-icon-opt {
  font-size: 30rpx;
  color: #4CAF50;
  margin-right: 12rpx;
}
.input-opt {
  flex: 1;
  padding: 28rpx 0;
  font-size: 30rpx;
  color: #333;
  border: none;
  background: transparent;
}
.textarea-wrap-opt {
  align-items: flex-start;
}
.textarea-opt {
  flex: 1;
  min-height: 120rpx;
  padding: 28rpx 0;
  font-size: 30rpx;
  color: #333;
  border: none;
  background: transparent;
  resize: none;
}
.picker-input-opt {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 28rpx;
  border-radius: 32rpx;
  background: #f8f9fa;
  font-size: 28rpx;
  color: #333;
  box-shadow: 0 2rpx 8rpx rgba(76,175,80,0.06);
  border: 2rpx solid transparent;
  transition: border 0.2s, box-shadow 0.2s;
}
.picker-input-opt:active, .picker-input-opt:focus {
  border: 2rpx solid #4CAF50;
  box-shadow: 0 4rpx 16rpx rgba(76,175,80,0.12);
}
.picker-text-opt {
  font-size: 28rpx;
  color: #333;
}
.picker-arrow-opt {
  font-size: 26rpx;
  color: #4CAF50;
}
.upload-section-opt {
  margin-top: 18rpx;
}
.upload-list-opt {
  display: flex;
  flex-wrap: wrap;
  gap: 22rpx;
  margin-bottom: 10rpx;
}
.upload-item-opt {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(76,175,80,0.10);
}
.upload-image-opt {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  object-fit: cover;
}
.upload-delete-opt {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  width: 44rpx;
  height: 44rpx;
  background: #f44336;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(76,175,80,0.18);
}
.upload-add-opt {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: linear-gradient(135deg,#667eea 60%,#764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 48rpx;
  box-shadow: 0 2rpx 8rpx rgba(76,175,80,0.10);
  cursor: pointer;
}
.upload-icon-opt {
  font-size: 60rpx;
  color: #fff;
}
.upload-tip-opt {
  font-size: 24rpx;
  color: #bbb;
  margin-top: 8rpx;
}
.submit-section-opt {
  padding: 48rpx 0 0 0;
}
.btn-gradient-opt {
  background: linear-gradient(135deg,#667eea 60%,#764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx rgba(76,175,80,0.18);
  transition: box-shadow 0.2s;
}
.btn-gradient-opt:active {
  box-shadow: 0 2rpx 8rpx rgba(76,175,80,0.30);
}
.btn-large-opt {
  width: 100%;
  padding: 36rpx 0;
  font-size: 34rpx;
  font-weight: bold;
  margin-top: 12rpx;
} 