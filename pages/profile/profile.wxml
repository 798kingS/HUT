<view class="custom-navbar">
  <view class="navbar-bg"></view>
  <view class="navbar-content">
    <text class="navbar-title">个人中心</text>
    <view class="navbar-actions">
      <view class="navbar-settings" bindtap="navigateToSettings">
        <text class="settings-icon">⚙️</text>
      </view>
    </view>
  </view>
</view>

<view class="profile-container">
  <!-- 用户信息卡片 -->
  <view class="user-card">
    <view class="user-info" wx:if="{{userInfo}}">
      <view class="avatar-section">
        <image src="{{userInfo.avatarUrl}}" class="avatar-lg"></image>
        <view class="avatar-badge">
          <text class="badge-text">VIP</text>
        </view>
      </view>
      <view class="user-details">
        <text class="nickname">{{userInfo.nickName}}</text>
        <text class="user-id">ID: {{userInfo.userId}}</text>
        <view class="user-stats">
          <view class="stat-item">
            <text class="stat-number">{{userInfo.posts}}</text>
            <text class="stat-label">发布</text>
          </view>
          <view class="stat-item">
            <text class="stat-number">{{userInfo.collects}}</text>
            <text class="stat-label">收藏</text>
          </view>
          <view class="stat-item">
            <text class="stat-number">{{userInfo.likes}}</text>
            <text class="stat-label">获赞</text>
          </view>
        </view>
      </view>
    </view>
    
    <view class="login-section" wx:else>
      <view class="login-avatar">
        <image src="/images/头像.png" class="avatar-lg"></image>
        <view class="login-indicator"></view>
      </view>
      <view class="login-info">
        <text class="login-title">未登录</text>
        <text class="login-desc">登录后享受更多功能</text>
        <button class="login-btn" bindtap="login">
          <text class="btn-icon">🚀</text>
          <text class="btn-text">立即登录</text>
        </button>
      </view>
    </view>
  </view>

  <!-- 功能菜单 -->
  <view class="menu-section">
    <view class="menu-group">
      <view class="menu-item" bindtap="navigateToPersonalInfo">
        <view class="menu-icon-wrapper">
          <image src="/images/个人.png" class="menu-icon"></image>
        </view>
        <view class="menu-content">
          <text class="menu-title">个人信息</text>
          <text class="menu-desc">昵称、头像、性别等</text>
        </view>
        <text class="menu-arrow">›</text>
      </view>
      
      <view class="menu-item" bindtap="navigateToMyPosts">
        <view class="menu-icon-wrapper">
          <image src="/images/我的发布.png" class="menu-icon"></image>
        </view>
        <view class="menu-content">
          <text class="menu-title">我的发布</text>
          <text class="menu-desc">拼车、卖书、论坛帖子</text>
        </view>
        <text class="menu-arrow">›</text>
      </view>
      
      <view class="menu-item" bindtap="navigateToMyCollects">
        <view class="menu-icon-wrapper">
          <image src="/images/我的收藏.png" class="menu-icon"></image>
        </view>
        <view class="menu-content">
          <text class="menu-title">我的收藏</text>
          <text class="menu-desc">收藏的内容</text>
        </view>
        <text class="menu-arrow">›</text>
      </view>
    </view>

    <view class="menu-group">
      <view class="menu-item" bindtap="navigateToSettings">
        <view class="menu-icon-wrapper">
          <image src="/images/设置.png" class="menu-icon"></image>
        </view>
        <view class="menu-content">
          <text class="menu-title">设置</text>
          <text class="menu-desc">退出登录、清除缓存等</text>
        </view>
        <text class="menu-arrow">›</text>
      </view>
      
      <view class="menu-item" bindtap="navigateToAbout">
        <view class="menu-icon-wrapper">
          <image src="/images/关于我们.png" class="menu-icon"></image>
        </view>
        <view class="menu-content">
          <text class="menu-title">关于我们</text>
          <text class="menu-desc">版本信息、联系方式</text>
        </view>
        <text class="menu-arrow">›</text>
      </view>
      
      <view class="menu-item" bindtap="feedback">
        <view class="menu-icon-wrapper">
          <image src="/images/意见反馈.png" class="menu-icon"></image>
        </view>
        <view class="menu-content">
          <text class="menu-title">意见反馈</text>
          <text class="menu-desc">问题反馈、建议</text>
        </view>
        <text class="menu-arrow">›</text>
      </view>
    </view>
  </view>

  <!-- 快捷功能 -->
  <view class="quick-section">
    <view class="section-title">快捷功能</view>
    <view class="quick-grid">
      <view class="quick-item" bindtap="scanCode">
        <image src="/images/扫码.png" class="quick-icon"></image>
        <text class="quick-text">扫码</text>
      </view>
      <view class="quick-item" bindtap="shareApp">
        <image src="/images/分享.png" class="quick-icon"></image>
        <text class="quick-text">分享</text>
      </view>
      <view class="quick-item" bindtap="contactService">
        <image src="/images/客服.png" class="quick-icon"></image>
        <text class="quick-text">客服</text>
      </view>
      <view class="quick-item" bindtap="rateApp">
        <image src="/images/评价.png" class="quick-icon"></image>
        <text class="quick-text">评价</text>
      </view>
    </view>
  </view>

  <!-- 版本信息 -->
  <view class="version-info">
    <text class="version-text">湖院通 v1.0.0</text>
  </view>
</view> 