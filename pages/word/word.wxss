/* 自定义顶部导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 150rpx;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}
.navbar-bg {
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  width: 100%;
  height: 150rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(102,126,234,0.15);
}
.navbar-bg::after {
  content: "";
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(255,255,255,0.1);
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}
.navbar-content {
  position: relative;
  width: 92%;
  height: 100rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
}
.navbar-title {
  flex: 1;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  letter-spacing: 4rpx;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.15);
}

/* 主容器 */
.word-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #f0f2ff 100%);
  padding-top: 160rpx;
  padding-bottom: 40rpx;
}

/* 欢迎横幅 */
.welcome-banner {
  position: relative;
  margin: 26rpx 32rpx 40rpx 32rpx;
  height: 280rpx;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 40rpx rgba(102,126,234,0.12);
}
.banner-bg {
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  width: 100%;
  height: 100%;
}
.banner-gradient {
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
}
.banner-pattern {
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/><circle cx="50" cy="10" r="0.5" fill="white" opacity="0.2"/><circle cx="10" cy="60" r="0.5" fill="white" opacity="0.2"/><circle cx="90" cy="40" r="0.5" fill="white" opacity="0.2"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
  opacity: 0.3;
}
.banner-content {
  position: relative;
  z-index: 2;
  padding: 40rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.welcome-text {
  flex: 1;
}
.greeting {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 22rpx;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.15);
}
.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
  text-shadow: 0 1rpx 4rpx rgba(0,0,0,0.1);
}
.messages-stats {
  text-align: right;
  color: #fff;
}
.stats-number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 4rpx;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.15);
}
.stats-label {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
  text-shadow: 0 1rpx 4rpx rgba(0,0,0,0.1);
}

/* 分类筛选 */
.category-filters {
  display: flex;
  gap: 16rpx;
  margin: 0 32rpx 32rpx 32rpx;
  padding: 0;
}
.filter-item {
  flex: 1;
  padding: 16rpx 24rpx;
  background: #fff;
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(102,126,234,0.08);
  transition: all 0.3s ease;
}
.filter-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 8rpx 24rpx rgba(102,126,234,0.2);
}
.filter-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #666;
}
.filter-item.active .filter-text {
  color: #fff;
  font-weight: 600;
}

/* 消息列表 */
.messages-section {
  margin: 0 32rpx;
}
.messages-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.message-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(102,126,234,0.08);
  transition: all 0.3s ease;
}
.message-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 12rpx 40rpx rgba(102,126,234,0.12);
}

/* 卡片头部 */
.card-header {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
}
.message-avatar {
  position: relative;
  flex-shrink: 0;
}
.avatar-img {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}
.online-dot {
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #4CAF50;
  border: 3rpx solid #fff;
}
.message-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}
.message-title-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16rpx;
}
.message-title {
  flex: 1;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
}
.message-badge {
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 500;
  flex-shrink: 0;
}
.carpool-badge {
  background: rgba(76,175,80,0.1);
  color: #4CAF50;
}
.sell-badge {
  background: rgba(33,150,243,0.1);
  color: #2196F3;
}
.food-badge {
  background: rgba(255,152,0,0.1);
  color: #FF9800;
}
.message-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

/* 进度区域 */
.progress-section {
  margin-bottom: 24rpx;
}
.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}
.progress-fill {
  height: 100%;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}
.progress-fill.pending {
  background: linear-gradient(90deg, #FF9800 0%, #FFD54F 100%);
}
.progress-fill.accepted {
  background: linear-gradient(90deg, #2196F3 0%, #64B5F6 100%);
}
.progress-fill.delivering {
  background: linear-gradient(90deg, #9C27B0 0%, #BA68C8 100%);
}
.progress-fill.completed {
  background: linear-gradient(90deg, #4CAF50 0%, #81C784 100%);
}
.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.progress-status {
  font-size: 24rpx;
  font-weight: 500;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}
.progress-status.pending {
  color: #FF9800;
  background: rgba(255,152,0,0.1);
}
.progress-status.accepted {
  color: #2196F3;
  background: rgba(33,150,243,0.1);
}
.progress-status.delivering {
  color: #9C27B0;
  background: rgba(156,39,176,0.1);
}
.progress-status.completed {
  color: #4CAF50;
  background: rgba(76,175,80,0.1);
}
.progress-time {
  font-size: 24rpx;
  color: #999;
}

/* 消息详情 */
.message-details {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: #f8f9ff;
  border-radius: 16rpx;
}
.detail-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
}
.detail-label {
  color: #666;
  margin-right: 8rpx;
}
.detail-value {
  color: #333;
  font-weight: 500;
}
.detail-value.price {
  color: #667eea;
  font-weight: 600;
  font-size: 28rpx;
}

/* 操作按钮 */
.message-actions {
  display: flex;
  gap: 16rpx;
}
.action-btn {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  padding: 0;
  margin: 0;
}
.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(102,126,234,0.3);
}
.action-btn.primary:active {
  opacity: 0.8;
  transform: scale(0.98);
}
.action-btn.secondary {
  background: #f0f0f0;
  color: #666;
}
.action-btn.secondary:active {
  background: #e0e0e0;
}

/* 空状态 */
.empty-state {
  padding: 120rpx 32rpx;
  text-align: center;
}
.empty-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}
.empty-icon {
  font-size: 120rpx;
  opacity: 0.5;
}
.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}
.empty-desc {
  font-size: 26rpx;
  color: #999;
}
.empty-action {
  margin-top: 24rpx;
  padding: 20rpx 48rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(102,126,234,0.3);
}
.empty-action:active {
  opacity: 0.8;
  transform: scale(0.98);
}