/* 自定义顶部导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 150rpx;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}
.navbar-bg {
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  width: 100%;
  height: 150rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  box-shadow: 0 4rpx 24rpx rgba(102, 126, 234, 0.15);
}
/* 柔和白色蒙版 */
.navbar-bg::after {
  content: "";
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(255,255,255,0.18);
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}
.navbar-content {
  position: relative;
  width: 92%;
  height: 100rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 2;
}
.navbar-logo {
  width: 56rpx;
  height: 56rpx;
  border-radius: 16rpx;
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
}
.navbar-title {
  flex: 1;
  text-align: center;
  margin-left: 55rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  letter-spacing: 4rpx;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.10);
}
.navbar-action {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.18);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}

/* 让内容下移，避免被导航栏遮挡 */
.profile-bg {
  padding-top: 160rpx;
}

/* 个人中心页面样式 */
.user-card {
  /* background: linear-gradient(135deg, #4CAF50, #45a049); */
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 100rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
  color: #fff;
}

.user-info {
  display: flex;
  align-items: center;
}

.login-section {
  display: flex;
  align-items: center;
}

.user-details, .login-info {
  flex: 1;
  margin-left: 30rpx;
}

.nickname, .login-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-id, .login-desc {
  display: block;
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 20rpx;
}

.user-stats {
  display: flex;
  gap: 40rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  opacity: 0.8;
}

/* 菜单样式 */
.menu-section {
  margin-bottom: 30rpx;
}

.menu-group {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right:0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f0f9ff;
  border-radius: 12rpx;
}

.icon {
  width: 32rpx;
  height: 32rpx;
}

.menu-content {
  flex: 1;
}

.menu-title {
  margin-left: 10rpx;
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 5rpx;
}

.menu-desc {
  margin-left: 10rpx;
  display: block;
  font-size: 24rpx;
  color: #999;
}

.menu-arrow {
  font-size: 32rpx;
  color: #ccc;
}

/* 快捷功能 */
.quick-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.quick-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
}

.quick-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15rpx;
}

.quick-icon {
  width: 92rpx;
  height: 92rpx;
}

.quick-text {
  font-size: 24rpx;
  color: #666;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx;
}

.version-text {
  font-size: 24rpx;
  color: #999;
}

/* 新增样式 */
.profile-container {
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
  padding-top: 150rpx;
}

.avatar-section {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: linear-gradient(135deg, #ff6b6b, #ee5a24);
  color: white;
  border-radius: 20rpx;
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.3);
}

.badge-text {
  color: #ffffff;
  font-size: 20rpx;
  font-weight: bold;
}

.login-avatar {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-indicator {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 24rpx;
  height: 24rpx;
  background: #ff6b6b;
  border: 4rpx solid #ffffff;
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.3);
}

.login-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
  gap: 15rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.4);
}

.btn-icon {
  font-size: 24rpx;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
}

.menu-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.2);
  transition: all 0.3s ease;
}

.menu-icon {
  width: 52rpx;
  height: 52rpx;
}

.menu-arrow {
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
  transition: all 0.3s ease;
}

.menu-item:active .menu-arrow {
  color: #667eea;
  transform: translateX(5rpx);
} 