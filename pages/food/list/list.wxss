/* pages/food/list/list.wxss */
.food-container {
  background: #f7f8fa;
  min-height: 100vh;
  padding-bottom: 40rpx;
  margin-top: 180rpx;
}

/* 欢迎横幅 */
.welcome-banner {
  position: relative;
  height: 200rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  border-radius: 30rpx;
  margin-top: -10rpx;
  margin: 20rpx;
}

.banner-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.banner-gradient {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.banner-pattern {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: radial-gradient(circle at 20% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
                    radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
}

.banner-content {
  position: relative;
  z-index: 2;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 32rpx;
  height: 100%;
  border-radius: 30rpx;
}

.welcome-text {
  flex: 1;
}

.greeting {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.orders-stats {
  text-align: center;
}

.stats-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 4rpx;
}

.stats-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 智能搜索 */
.smart-search {
  background: #fff;
  padding: 24rpx 32rpx;
  margin-bottom: 20rpx;
  margin: 20rpx;
}

.search-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.search-input {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 32rpx;
  padding: 0 24rpx;
  height: 72rpx;
  transition: all 0.3s;
}

.search-input.focus {
  background: #e3f2fd;
  border: 2rpx solid #2196F3;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.input-field {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.search-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 32rpx;
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  font-weight: bold;
}

.search-text {
  font-size: 26rpx;
}

/* 快速发布 */
.quick-publish {
  background: #fff;
  padding: 24rpx 32rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin: 20rpx;
}

.quick-publish-header {
  margin-bottom: 20rpx;
}

.quick-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.quick-subtitle {
  font-size: 22rpx;
  color: #666;
}

.quick-input-wrapper {
  position: relative;
}

.quick-input {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  box-sizing: border-box;
  transition: border-color 0.3s;
}

.quick-input:focus {
  border-color: #2196F3;
  background: #fff;
}

.quick-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
  /* padding: 40rpx; */
}

.char-count {
  font-size: 22rpx;
  color: #999;
  margin-right: 200rpx;
}

.quick-publish-btn {
  /* 正常状态样式 */
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  /* 确保按钮可点击区域足够大 */
  padding: 8px 16px;
  border-radius: 10px;
  /* margin-right: 130rpx; */
}

.quick-publish-btn.disabled {
  /* 禁用状态样式 */
  background-color: #ccc;
  color: #666;
  cursor: not-allowed;
}

.btn-text {
  font-size: 26rpx;
}

/* 分类筛选 */
.category-filters {
  display: flex;
  background: #fff;
  padding: 20rpx 32rpx;
  margin-bottom: 20rpx;
  gap: 20rpx;
  border-radius: 30rpx;
  margin: 20rpx;
}

.filter-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 8rpx;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.filter-item.active {
  background: #e3f2fd;
}

.filter-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}

.filter-text {
  font-size: 22rpx;
  color: #666;
  text-align: center;
}

.filter-item.active .filter-text {
  color: #2196F3;
  font-weight: bold;
}

/* 订单列表 */
.orders-section {
  padding: 0 32rpx;
  width: 700rpx;
}

.orders-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.order-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s;
}

.order-card:active {
  transform: scale(0.98);
}

/* 卡片头部 */
.card-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.order-cover-section {
  position: relative;
  margin-right: 20rpx;
}

.order-cover {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  background: #f5f5f5;
}

.order-status {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #4caf50;
  color: #fff;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: bold;
}

.status-text {
  font-size: 20rpx;
}

.order-info {
  flex: 1;
  margin-right: 16rpx;
}

.order-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.order-category {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.order-tags {
  display: flex;
  gap: 8rpx;
}

.tag-item {
  background: #e3f2fd;
  color: #2196F3;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
}

.commission-section {
  display: flex;
  align-items: baseline;
  color: #f44336;
}

.commission-symbol {
  font-size: 24rpx;
  font-weight: bold;
}

.commission-amount {
  font-size: 36rpx;
  font-weight: bold;
}

/* 订单描述 */
.order-description {
  margin-bottom: 20rpx;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.desc-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.commission-after {
  display: inline-block;
  margin-left: 12rpx;
  color: #f44336;
  font-weight: bold;
}

/* 下单者信息 */
.customer-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  /* width: 500rpx; */
}

.customer-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.customer-avatar {
  position: relative;
  margin-right: 16rpx;
}

.avatar-img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.online-indicator {
  position: absolute;
  bottom: 2rpx;
  right: 2rpx;
  width: 16rpx;
  height: 16rpx;
  background: #4caf50;
  border: 2rpx solid #fff;
  border-radius: 50%;
}

.customer-details {
  /* display: flex; */
  flex: 1;
}

.customer-name {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.order-time {
  font-size: 22rpx;
  color: #999;
}

/* 订单操作按钮容器 */
.order-actions {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

/* 基础操作按钮样式 */
.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 5rpx 10rpx;
  font-size: 24rpx;
  color: #666;
}

.action-icon {
  font-size: 36rpx;
  margin-bottom: 5rpx;
}

/* 删除按钮特殊样式 */
.delete-btn .action-icon,
.delete-btn .action-text {
  color: #f33; /* 红色标识删除 */
}

/* 避免删除按钮点击时触发订单卡片的跳转事件 */
.delete-btn {
  pointer-events: auto;
}

.action-count {
  font-size: 20rpx;
  color: #666;
}

.action-text {
  font-size: 20rpx;
  color: #666;
}

/* 接单按钮区域 */
.order-buttons {
  display: flex;
  gap: 16rpx;
  margin-top: 20rpx;
  width: 1000rpx;
}

.take-order-btn {
  flex: 1;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 24rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
  font-weight: bold;
}

.take-order-btn.accepted {
  background: #e3f2fd;
  color: #2196F3;
  border: 1rpx solid #2196F3;
  width: 100rpx;
}

.take-order-btn.delivering {
  background: #e8f5e8;
  color: #4caf50;
  border: 1rpx solid #4caf50;
}

.take-order-btn.completed {
  background: #f3e5f5;
  color: #9c27b0;
  border: 1rpx solid #9c27b0;
  width: 100rpx;
}

.take-order-btn.disabled {
  background: #ccc;
  color: #999;
}

/* 取餐按钮 */
.pickup-btn {
  background: linear-gradient(135deg, #ff9800 0%, #f57c00 100%);
  color: #fff;
  border: none;
  border-radius: 24rpx;
  padding: 20rpx 32rpx;
  font-size: 26rpx;
  font-weight: bold;
  /* margin-left: 10rpx; */
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 0, 0.3);
  /* width: 1000rpx; */
}

/* 加载更多 */
.load-more-section {
  text-align: center;
  padding: 40rpx 0;
}

.load-more-btn {
  background: #f5f5f5;
  color: #666;
  border: 1rpx solid #e0e0e0;
  border-radius: 32rpx;
  padding: 20rpx 40rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.load-text {
  font-size: 26rpx;
}

.load-icon {
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 32rpx;
  line-height: 1.4;
}

.empty-action {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 32rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: bold;
}



