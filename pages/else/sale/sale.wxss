/* pages/else/sale/sale.wxss */
.sale-container {
  background: #f7f8fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
  margin-top: 180rpx;
}

/* 图片轮播区域 */
.image-section {
  background: #fff;
  position: relative;
}

.image-swiper {
  height: 500rpx;
}

.product-image {
  width: 100%;
  height: 100%;
}

.image-indicators {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 12rpx;
}

.indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
  transition: background 0.3s;
}

.indicator.active {
  background: #2196F3;
}

/* 商品信息区域 */
.info-section {
  background: #fff;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.price-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
}

.current-price {
  font-size: 48rpx;
  font-weight: bold;
  color: #f44336;
  margin-right: 20rpx;
}

.original-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
}

.title-row {
  margin-bottom: 20rpx;
}

.product-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
}

.meta-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.condition, .category {
  font-size: 28rpx;
  color: #666;
  padding: 8rpx 16rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
}

.stats-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.publish-time, .location {
  font-size: 24rpx;
  color: #999;
}

/* 商品描述区域 */
.description-section {
  background: #fff;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.description-text {
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
}

/* 卖家信息区域 */
.seller-section {
  background: #fff;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.seller-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.seller-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.seller-details {
  flex: 1;
}

.seller-name {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.seller-stats {
  font-size: 24rpx;
  color: #999;
}

.contact-btn {
  background: #2196F3;
  color: #fff;
  border: none;
  border-radius: 24rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
}

/* 操作按钮区域 */
.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 32rpx;
  border-top: 1rpx solid #e0e0e0;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.action-buttons {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: transparent;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  min-width: 100rpx;
}

.action-btn.liked {
  border-color: #f44336;
  background: rgba(244, 67, 54, 0.1);
}

.action-btn.collected {
  border-color: #ff9800;
  background: rgba(255, 152, 0, 0.1);
}

.btn-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.btn-text {
  font-size: 24rpx;
  color: #666;
}

.purchase-btn {
  flex: 1;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 32rpx;
  padding: 24rpx 0;
  font-size: 32rpx;
  font-weight: bold;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}