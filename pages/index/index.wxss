/* 自定义顶部导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 150rpx;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}
.navbar-bg {
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  width: 100%;
  height: 150rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(102,126,234,0.15);
}
.navbar-bg::after {
  content: "";
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(255,255,255,0.1);
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}
.navbar-content {
  position: relative;
  width: 92%;
  height: 100rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 2;
}
.navbar-title {
  flex: 1;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  letter-spacing: 4rpx;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.15);
}
.navbar-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.navbar-notification {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.notification-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #ff4757;
  position: absolute;
  top: 8rpx;
  right: 8rpx;
}

/* 主容器 */
.index-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #f0f2ff 100%);
  padding-top: 160rpx;
  padding-bottom: 40rpx;
}

/* 欢迎横幅 */
.welcome-banner {
  position: relative;
  margin: 26rpx 32rpx 40rpx 32rpx;
  height: 280rpx;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 40rpx rgba(102,126,234,0.12);
}
.banner-bg {
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  width: 100%;
  height: 100%;
}
.banner-gradient {
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
}
.banner-pattern {
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/><circle cx="50" cy="10" r="0.5" fill="white" opacity="0.2"/><circle cx="10" cy="60" r="0.5" fill="white" opacity="0.2"/><circle cx="90" cy="40" r="0.5" fill="white" opacity="0.2"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
  opacity: 0.3;
}
.banner-content {
  position: relative;
  z-index: 2;
  padding: 40rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: -45rpx;
}
.welcome-text {
  flex: 1;
}
.greeting {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 22rpx;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.15);
}
.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
  text-shadow: 0 1rpx 4rpx rgba(0,0,0,0.1);
}
.weather-info {
  text-align: right;
  color: #fff;
}
.weather-temp {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 4rpx;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.15);
}
.weather-desc {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
  text-shadow: 0 1rpx 4rpx rgba(0,0,0,0.1);
}

/* 核心功能区域 */
.core-functions {
  margin: 0 32rpx 40rpx 32rpx;
}
.function-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.function-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(102,126,234,0.08);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}
.function-card::before {
  content: "";
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  background: linear-gradient(135deg, rgba(102,126,234,0.05) 0%, rgba(118,75,162,0.05) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}
.function-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 20rpx rgba(102,126,234,0.15);
}
.function-card:active::before {
  opacity: 1;
}
.card-icon {
  flex-shrink: 0;
}
.icon-bg {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
}
.carpool-bg {
  background: linear-gradient(135deg, #4CAF50 0%, #81C784 100%);
}
.books-bg {
  background: linear-gradient(135deg, #2196F3 0%, #64B5F6 100%);
}
.things-bg{
  background: linear-gradient(135deg, #e48787 0%, #b96e72 100%);
}
.forum-bg {
  background: linear-gradient(135deg, #FF9800 0%, #FFD54F 100%);
}
.icon-text {
  font-size: 40rpx;
}
.card-content {
  flex: 1;
}
.card-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}
.card-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}
.card-arrow {
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
}

/* 热门动态 */
.trending-section {
  margin: 0 32rpx 40rpx 32rpx;
}
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}
.header-left {
  flex: 1;
}
.section-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}
.section-subtitle {
  display: block;
  font-size: 26rpx;
  color: #666;
}
.header-right {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: rgba(102,126,234,0.1);
  border-radius: 20rpx;
}
.more-text {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 500;
}
.more-arrow {
  font-size: 24rpx;
  color: #667eea;
  font-weight: bold;
}
.trending-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.trending-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  gap: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(102,126,234,0.06);
  transition: all 0.3s ease;
}
.trending-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 8rpx 32rpx rgba(102,126,234,0.12);
}
.card-avatar {
  position: relative;
  flex-shrink: 0;
}
.avatar-img {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}
.online-dot {
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #4CAF50;
  border: 3rpx solid #fff;
}
.card-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16rpx;
}
.card-title {
  flex: 1;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.3;
}
.card-badge {
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 500;
  flex-shrink: 0;
}
.carpool-badge {
  background: rgba(76,175,80,0.1);
  color: #4CAF50;
}
.books-badge {
  background: rgba(33,150,243,0.1);
  color: #2196F3;
}
.forum-badge {
  background: rgba(255,152,0,0.1);
  color: #FF9800;
}
.card-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.card-time {
  font-size: 24rpx;
  color: #999;
}
.card-stats {
  display: flex;
  gap: 16rpx;
}
.stat-item {
  font-size: 22rpx;
  color: #999;
}

/* 快捷工具 */
.quick-tools {
  display: flex;
  justify-content: space-around;
  margin: 0 32rpx 40rpx 32rpx;
  padding: 32rpx 0;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(102,126,234,0.08);
}
.tool-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}
.tool-icon {
  width: 92rpx;
  height: 92rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
  transition: all 0.3s ease;
}
.scan-icon {
  background: linear-gradient(135deg, #4CAF50 0%, #81C784 100%);
}
.share-icon {
  background: linear-gradient(135deg, #2196F3 0%, #64B5F6 100%);
}
.feedback-icon {
  background: linear-gradient(135deg, #FF9800 0%, #FFD54F 100%);
}
.settings-icon {
  background: linear-gradient(135deg, #9C27B0 0%, #BA68C8 100%);
}
.tool-item:active .tool-icon {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.12);
}
.icon-emoji {
  font-size: 32rpx;
}
.tool-text {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

/* 底部装饰 */
.bottom-decoration {
  text-align: center;
  margin: 0 32rpx;
}
.decoration-line {
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 2rpx;
  margin: 0 auto 16rpx auto;
}
.decoration-text {
  font-size: 24rpx;
  color: #999;
  font-style: italic;
}

/* 图标图片样式 */
.icon-image {
  width: 72rpx;
  height: 72rpx;
}

.tool-icon-image {
  width: 72rpx;
  height: 72rpx;
} 